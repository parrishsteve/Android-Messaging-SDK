<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/account_id_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/account_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Account ID:" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="logout"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/auth_code_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/auth_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Auth Code:" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/badge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Badge"

                />
        </LinearLayout>

        <android.support.v7.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:columnCount="2"
            app:rowCount="9">

            <Button
                android:id="@+id/button_start_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open_activity"
                app:layout_column="0"
                app:layout_gravity="fill"
                app:layout_row="0" />

            <Button
                android:id="@+id/button_start_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open_fragment"
                app:layout_column="1"
                app:layout_gravity="fill"
                app:layout_row="0"

                />

            <CheckBox
                android:id="@+id/check_box_toasts"
                android:checked="false"
                android:gravity="center"
                android:text="Show callbacks toasts"
                app:layout_column="0"
                app:layout_row="1"

                />

            <CheckBox
                android:id="@+id/check_box_read_only"
                android:checked="false"
                android:gravity="center"
                android:text="Read Only mode"
                app:layout_column="1"
                app:layout_row="1" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/first_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_gravity="fill"
                app:layout_row="2"

                >

                <EditText
                    android:id="@+id/first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First Name:" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/last_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_gravity="fill"
                app:layout_row="3"

                >

                <EditText
                    android:id="@+id/last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name:" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/phone_number_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_gravity="fill"
                app:layout_row="4"

                >

                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number:"
                    android:inputType="phone" />

            </android.support.design.widget.TextInputLayout>


            <Spinner
                android:id="@+id/spinner_locale"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_gravity="center"
                app:layout_row="5" />


            <EditText
                android:id="@+id/language_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="language"
                android:inputType="textPersonName"
                app:layout_column="0"
                app:layout_gravity="center"
                app:layout_row="6" />


            <EditText
                android:id="@+id/country_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="region"
                android:inputType="textPersonName"
                app:layout_column="1"
                app:layout_gravity="center"
                app:layout_row="6" />


            <Button
                android:id="@+id/update_language_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Language"
                app:layout_column="0"
                app:layout_gravity="fill"
                app:layout_row="7"

                />

            <Button
                android:id="@+id/clear_locale_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                app:layout_column="1"
                app:layout_gravity="fill"
                app:layout_row="7"

                />


            <TextView
                android:id="@+id/date_sample_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_column="0"
                app:layout_gravity="fill"
                app:layout_row="8"

                />

            <TextView
                android:id="@+id/time_sample_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_column="1"
                app:layout_gravity="fill"
                app:layout_row="8"

                />

        </android.support.v7.widget.GridLayout>

        <TextView
            android:id="@+id/sdk_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="10dp"
            android:text="VERSION" />

    </LinearLayout>
</ScrollView>
